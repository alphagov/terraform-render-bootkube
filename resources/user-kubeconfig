apiVersion: v1
kind: Config
clusters:
- name: ${name}-cluster
  cluster:
    server: ${server}
    certificate-authority-data: ${ca_cert}
users:
- name: ${name}-user
  user:
    exec:
      apiVersion: client.authentication.k8s.io/v1alpha1
      command: aws-iam-authenticator
      args:
        - "token"
        - "-i"
        - "${cluster_id}"
contexts:
- name: ${name}-context
  context:
    cluster: ${name}-cluster
    user: ${name}-user
current-context: ${name}-context
